template("rust_library_with_host") {
  rust_library(target_name) {
    forward_variables_from(invoker, "*", [])
    rustflags += ["--target=wasm32-unknown-unknown"]
  }
  rust_library(target_name + "-host") {
    forward_variables_from(invoker, "*", [])
    output_name += "-host"
    rustflags += ["-Cextra-filename=-host"]
  }
}
